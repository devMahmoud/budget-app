<div class="nav">
  <%= link_to '<', groups_path, class: "back-nav" %>
  <h2>NEW CATEGORY</h2>
  <%= button_to 'Log out', destroy_user_session_path, method: :delete, data: {turbo: false}, class: "logout-nav" %>
</div>

<%= form_with model: @group, class: "group-form" do |f| %>
  <%= render "devise/shared/error_messages", resource: @group %>

  <div>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Category Name", class: "field", required: true %>
  </div>
  
  <div>
    <%= f.text_field :icon, autofocus: true, autocomplete: "icon", placeholder: "Icon URL", class: "field", required: true %>
  </div>

  <div class="sub-btn-container">
    <%= f.submit "Create Category", class: "sub-btn" %>
  </div>
<% end %>